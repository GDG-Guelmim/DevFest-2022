---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Cloud",
    description:
      "Devops",
    icon: "mdi:cloud",
  },
  {
    title: "Software architecture",
    description:
      "Astro renders your entire page to static HTML, removing all JavaScript from your final build by default.",
    icon: "mdi:code",
  },
  {
    title: "Mobile development",
    description:
      "Need some JS? Astro can automatically hydrate interactive components when they become visible on the page. If the user never sees it, they never load it.",
    icon: "mdi:smartphone",
  },
  {
    title: "Artificial intelligence",
    description:
      "Astro supports TypeScript, Scoped CSS, CSS Modules, Sass, Tailwind, Markdown, MDX, and any of your favorite npm packages.",
    icon: "mdi:brain",
  },
  {
    title: "Web development",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication.",
    icon: "mdi:web",
  },
  {
    title: "Security",
    description:
      "Automatic sitemaps, RSS feeds, pagination and collections take the pain out of SEO and syndication.",
    icon: "mdi:security",
  }
  
];
---

<ContentSection title="Sessions" id="Talks">
  <Fragment slot="lead"> 
    <span class="text-primary">DevFest-Guelmim </span>
    is an event held every year, with the purpose of sharing
    <span class="text-primary">state-of-the-art</span>
    tools and techs with the 
    <span class="text-primary"> Community</span> .
     Tickets are limited <br/>claim one <a href="https://gdg.community.dev/events/details/google-gdg-guelmim-presents-dev-fest-2022/" class="text-yellow-400 underline hover:text-red-400">now!!</a>
    <br>  
    <br>  
    <span class="text-primary">Session </span>
    topics this year are:
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
