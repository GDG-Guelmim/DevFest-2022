---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://gdg.community.dev/gdg-guelmim/",
    description: "GDG Guelmim's page on bevy",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/GDG-Guelmim",
    description: "GDG Guelmim's organization on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.instagram.com/gdg_guelmim/",
    description: "GDG Guelmim on Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://twitter.com/gdg_guelmim",
    description: "GDG Guelmim on Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<footer class="relative flex items-center justify-center h-64">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
